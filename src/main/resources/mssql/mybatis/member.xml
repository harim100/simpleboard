<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mssql.mybatis.memberMapper">
<insert id="joinMember" parameterType="com.board.dto.MemberDto" >
	INSERT INTO Cu_Customer 
	(
		Id
		,Pw
		,CustomerName
		,CellNum
	)
	VALUES
	( 
		#{id}  
		,#{pw}  
		,#{customerName}
		,#{cellNum}
	)
</insert>

<select id="loginBcrypt" resultType="com.board.dto.MemberDto">
	SELECT 
		customerNum
		,id
		,pw
		,customerName
		,cellNum
	FROM Cu_Customer WITH(NOLOCK)
	WHERE Id = #{id}
</select>

<select id="checkId" parameterType="String" resultType="int">
	SELECT COUNT(*)
	FROM Cu_Customer WITH(NOLOCK)
	WHERE Id = #{requestedId}
</select>

</mapper>